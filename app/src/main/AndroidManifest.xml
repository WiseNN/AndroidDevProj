<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="digitalfavors.wisen.android.mobiledev2">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NewActivity"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".MyViewPager"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MessangerView"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".AdvancedViewPagerActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".RadioButtonActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".CheckBoxActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".DialogActivity"
            android:parentActivityName=".DialogActivity"/>
        <activity android:name=".TimerActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".AnimationActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".DragActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ViewSlider"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".LoginActivity" />
    </application>

</manifest>