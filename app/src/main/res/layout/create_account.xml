<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232228"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="bottom|center"
        android:padding="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Lets get you start!"
            android:gravity="center_horizontal"
            android:textSize="10pt"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingLeft="2dp"
            android:textSize="10pt"
            />
    </LinearLayout>

    <EditText
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#19181D"
        android:hint="create a username"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />
    <EditText
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#19181D"
        android:hint="create a password"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#7BC2FF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="SIGN UP!"
        android:textColor="#222127"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="I already have an account."
            android:gravity="center_horizontal"
            android:textSize="8pt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingLeft="3dp"
            android:textSize="8pt"
            android:textColor="#74B4F2"
            />

    </LinearLayout>


</LinearLayout>